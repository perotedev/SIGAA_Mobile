<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="2dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorOnBackground"
        android:minHeight="100dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/title_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="5dp"
            android:text="@string/teste_plus"
            android:textStyle="bold"
            android:textColor="?colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/desc_doc"/>

        <TextView
            android:id="@+id/desc_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teste_plus_plus"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/title_doc"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/doc_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/file_pdf_fill"
            app:tint="?colorAccent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>