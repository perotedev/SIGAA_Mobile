<resources>
    <!-- Base application theme. -->
    <style name="Theme.SIGAAMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueSigaa</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorButtonNormal">@color/bg_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorButtonNormal</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">?attr/colorButtonNormal</item>
        <item name="colorAccent">@color/bg_light</item>
        <item name="android:textColor">@color/white_transparent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>s
</resources>